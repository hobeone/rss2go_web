    <div class="container">
      <form class="form-signin" {{action 'authenticate' on='submit'}}>
        <h2 class="form-signin-heading">Please sign in</h2>
        <label for="identification" class="sr-only">Email address</label>
        {{input type="email" class="form-control" id='identification' placeholder='Email address' value=identification required="" autofocus=""}}
        <label for="password" class="sr-only">Password</label>
        {{input id='password' placeholder='Password' class="form-control" type='password' value=password required=""}}
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
      </form>
      <div class="errormessage">
        {{#if errorMessage}}
        <p>{{errorMessage}}</p>
        {{/if}}
      </div>
    </div>
