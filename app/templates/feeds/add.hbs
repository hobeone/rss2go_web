<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      {{input type="text" value=model.name class="form-control" placeholder="The name of the Feed"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Feed URL</label>
    <div class="col-sm-10">
      {{input type="text" value=model.url class="form-control" placeholder="The address of the Feed"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Site URL</label>
    <div class="col-sm-10">
      {{input type="text" value=model.siteUrl class="form-control" placeholder="The URL for the main site"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'saveFeed' model}}>Subscribe to Feed</button>
    </div>
  </div>
</div>
